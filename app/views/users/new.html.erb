<h3>ユーザー新規登録</h3>

<%= render "shared/error", obj: @user, class: "error_text" %>

<%= form_with model: @user do |f| %>
    <table>
        <tr>
            <th><%= f.label :name, "名前" %></th>
            <td><%= f.text_field :name, placeholder: "アカウント名を入力", size: 32 %></td>
        </tr>
        <tr>
            <th><%= f.label :email, "メールアドレス" %></th>
            <td><%= f.email_field :email, placeholder: "メールアドレスを入力", size: 32 %></td>
        </tr>
        <tr>
            <th><%= f.label :password, "パスワード" %></th>
            <td><%= f.password_field :password, placeholder: "6〜10文字で入力", size: 32 %></td>
        </tr>
        <tr>
            <th><%= f.label :password_confirmation, "パスワードの確認" %></th>
            <td><%= f.password_field :password_confirmation, placeholder: "もう一度パスワードを入力", size: 32 %></td>
        </tr>
    </table>

    <div class="submit">
        <%= f.submit "登録する", class: "button" %>
    </div>

    <div>
        <ul>
            <li><%= link_to "TOPに戻る", :inns %></li>
        </ul>
    </div>
<% end %>
